/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f8fa;
}

/* 对话区域 */
.chat-area {
  flex: 1;
  padding: 20rpx;
  overflow-y: scroll;
}

/* ========== 题目卡片 ========== */
.question-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.subject-badge {
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 24rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.knowledge-badge {
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  border-radius: 20rpx;
}

.question-content-box {
  margin-bottom: 16rpx;
}

.content-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.content-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  word-wrap: break-word;
}

.question-img {
  width: 100%;
  border-radius: 12rpx;
  margin-top: 16rpx;
}

/* ========== 欢迎消息 ========== */
.welcome-msg {
  text-align: center;
  padding: 60rpx 40rpx;
}

.ai-avatar-emoji {
  font-size: 100rpx;
  display: block;
  margin-bottom: 24rpx;
}

.welcome-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.welcome-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* ========== 消息列表 ========== */
.message-item {
  margin-bottom: 24rpx;
  animation: fadeInUp 0.3s ease;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 用户消息 */
.user-message {
  display: flex;
  justify-content: flex-end;
  align-items: flex-start;
  gap: 12rpx;
}

.user-message .message-bubble {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 20rpx 24rpx;
  border-radius: 20rpx 20rpx 4rpx 20rpx;
  max-width: 520rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.user-message .avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #e8e8e8;
  flex-shrink: 0;
}

.user-message .user-avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* AI消息 */
.ai-message {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  gap: 12rpx;
}

.ai-message .avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: white;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
}

.ai-message .ai-avatar-emoji {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.ai-message .message-bubble {
  background: white;
  color: #333;
  padding: 20rpx 24rpx;
  border-radius: 20rpx 20rpx 20rpx 4rpx;
  max-width: 520rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.message-text {
  font-size: 28rpx;
  line-height: 1.8;
  word-wrap: break-word;
  white-space: pre-wrap;
}

/* 思考中动画 */
.thinking {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.thinking-text {
  font-size: 26rpx;
  color: #999;
}

.thinking-dots {
  display: flex;
  gap: 6rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #999;
  animation: blink 1.4s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes blink {
  0%, 60%, 100% {
    opacity: 0.3;
  }
  30% {
    opacity: 1;
  }
}

/* 语音播放按钮 */
.voice-btn {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 12rpx;
  padding: 10rpx 18rpx;
  background: #f5f7fa;
  border-radius: 24rpx;
}

.voice-icon {
  width: 28rpx;
  height: 28rpx;
}

.voice-text {
  font-size: 24rpx;
  color: #666;
}

/* ========== 底部输入区（仿微信设计）========== */
.input-area {
  background: #f7f7f7;
  padding-bottom: calc(env(safe-area-inset-bottom));
  border-top: 1rpx solid #e5e5e5;
}

/* 语音开关栏 */
.voice-switch-bar {
  padding: 12rpx 16rpx;
  display: flex;
  justify-content: center;
}

.switch-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  border: 1rpx solid #e5e5e5;
}

.switch-icon {
  font-size: 32rpx;
  line-height: 1;
}

.switch-text {
  font-size: 24rpx;
  color: #666;
}

/* 输入框区域 */
.input-box {
  padding: 8rpx 16rpx 12rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* 左侧语音图标 */
.voice-icon-btn {
  width: 60rpx;
  height: 60rpx;
  background: white;
  border: 1rpx solid #d9d9d9;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.wave-icon {
  font-size: 40rpx;
  line-height: 1;
}

/* 中间输入区域 */
.input-wrapper {
  flex: 1;
  min-width: 0;
}

/* 文字输入框 */
.text-input {
  width: 100%;
  height: 60rpx;
  background: white;
  border: 1rpx solid #d9d9d9;
  border-radius: 6rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 60rpx;
}

/* 语音按钮 */
.voice-press-btn {
  width: 100%;
  height: 60rpx;
  background: white;
  border: 1rpx solid #d9d9d9;
  border-radius: 6rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 60rpx;
  padding: 0;
  text-align: center;
}

.voice-press-btn.recording {
  background: #ededed;
  color: #576b95;
}

.voice-press-btn::after {
  border: none;
}

/* 发送按钮 */
.send-btn {
  width: 60rpx;
  height: 60rpx;
  background: #d9d9d9;
  color: white;
  font-size: 26rpx;
  border-radius: 6rpx;
  border: none;
  padding: 0;
  line-height: 60rpx;
  text-align: center;
  flex-shrink: 0;
  transition: background 0.2s;
}

.send-btn.active {
  background: #07c160;
}

.send-btn.disabled {
  opacity: 0.5;
}

.send-btn::after {
  border: none;
}
