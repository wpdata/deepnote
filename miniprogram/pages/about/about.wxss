.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #ffffff 100%);
  padding: 32rpx;
  padding-bottom: 80rpx;
}

/* 顶部 Logo 区域 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 64rpx 0;
  margin-bottom: 32rpx;
}

.logo-container {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.3);
}

.logo-icon {
  font-size: 80rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.version {
  font-size: 24rpx;
  color: #999;
  background: rgba(102, 126, 234, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  color: #667eea;
}

/* 卡片通用样式 */
.intro-card,
.features-card,
.tech-card,
.contact-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 应用介绍 */
.intro-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.intro-text {
  display: block;
  font-size: 26rpx;
  line-height: 1.8;
  color: #666;
  text-align: justify;
}

/* 核心功能 */
.feature-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}

.feature-icon {
  font-size: 48rpx;
  flex-shrink: 0;
}

.feature-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.feature-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.feature-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 技术支持 */
.tech-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tech-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.tech-label {
  font-size: 26rpx;
  color: #666;
}

.tech-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}

/* 联系方式 */
.contact-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.contact-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.contact-text {
  font-size: 26rpx;
  color: #333;
}

/* 底部版权 */
.footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 48rpx 0 32rpx;
}

.copyright {
  font-size: 22rpx;
  color: #999;
}
