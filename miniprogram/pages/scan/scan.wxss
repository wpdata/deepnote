.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 20rpx;
}

.header {
  padding: 20rpx 0;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

/* 上传区域 */
.upload-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
}

.upload-area {
  width: 600rpx;
  height: 500rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  border: 4rpx dashed #D9D9D9;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
}

.upload-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.upload-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

/* 按钮 */
.action-buttons {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  border: none;
}

.action-btn.primary {
  background-color: #1677FF;
  color: #FFFFFF;
}

.action-btn.secondary {
  background-color: #FFFFFF;
  color: #333;
  border: 2rpx solid #D9D9D9;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

/* 识别中 */
.recognizing-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-image {
  width: 100%;
  max-height: 500rpx;
  border-radius: 16rpx;
  margin-bottom: 60rpx;
}

.progress-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-ring {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: conic-gradient(#1677FF 0deg, #E5E5E5 0deg);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  position: relative;
}

.progress-ring::before {
  content: '';
  width: 160rpx;
  height: 160rpx;
  background-color: #FFFFFF;
  border-radius: 50%;
  position: absolute;
}

.progress-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #1677FF;
  position: relative;
  z-index: 1;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
}

/* 识别结果 */
.result-section {
  display: flex;
  flex-direction: column;
}

.result-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.edit-btn {
  padding: 12rpx 24rpx;
  background-color: #E6F4FF;
  color: #1677FF;
  font-size: 24rpx;
  border-radius: 20rpx;
  border: none;
}

.result-content {
  margin-bottom: 30rpx;
}

.result-textarea {
  width: 100%;
  min-height: 300rpx;
  padding: 20rpx;
  background-color: #F5F5F5;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 题目信息 */
.question-info {
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.info-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}

.picker,
.info-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
