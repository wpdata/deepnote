.container {
  min-height: 100vh;
  background-color: #F5F5F5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

/* 顶部标题栏 */
.camera-header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 32rpx 24rpx;
  background: transparent;
}

.camera-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.config-btn {
  padding: 12rpx 24rpx;
  background: #E6F4FF;
  color: #1677FF;
  font-size: 26rpx;
  border-radius: 20rpx;
  border: none;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* OCR配置面板覆盖层 - 重新设计 */
.config-panel-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 2000;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* OCR配置面板 - 重新设计 */
.config-panel {
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  width: 100%;
  max-height: 80vh;
  overflow-y: auto;
  animation: slideUp 0.3s ease-out;
  box-shadow: 0 -8rpx 48rpx rgba(0, 0, 0, 0.12);
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

/* 面板头部 */
.config-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  background: #fff;
  z-index: 1;
}

.config-header-content {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.config-icon {
  font-size: 36rpx;
}

.config-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.config-close {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.config-close:active {
  background: #e8e8e8;
  transform: scale(0.95);
}

.close-icon {
  font-size: 32rpx;
  color: #666;
  font-weight: 300;
}

/* 配置内容区 */
.config-content {
  padding: 24rpx 32rpx;
}

/* 配置卡片 */
.config-card {
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid #f0f0f0;
  transition: all 0.2s;
}

.config-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.config-card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.card-icon {
  font-size: 32rpx;
}

.card-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.config-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: white;
  border-radius: 12rpx;
  border: 2rpx solid #e8e8e8;
  transition: all 0.2s;
}

.config-picker:active {
  border-color: #667eea;
  background: #f8f9ff;
}

.picker-text {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.picker-arrow {
  font-size: 40rpx;
  color: #999;
  font-weight: 300;
}

/* 提示卡片 */
.config-tip-card {
  margin: 24rpx 32rpx 32rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff7e6 0%, #fffbf0 100%);
  border-radius: 16rpx;
  border: 1rpx solid #ffe7ba;
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.tip-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 24rpx;
  color: #8c6d1f;
  line-height: 1.6;
  flex: 1;
}

/* 移除旧样式 */
.config-item,
.config-label,
.config-value,
.config-tip,
.config-close-btn {
  display: none;
}

/* 上传区域 */
.upload-section {
  min-height: 100vh;
}

/* ============ 相机模式样式 ============ */
.camera-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
}

.camera-view {
  width: 100%;
  height: 100%;
}

/* 取景框遮罩层 */
.camera-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

/* 上方遮罩 */
.overlay-top {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: calc((100% - 650rpx) / 2);
  background: rgba(0, 0, 0, 0.6);
}

/* 中间行 */
.overlay-middle {
  position: absolute;
  top: calc((100% - 650rpx) / 2);
  left: 0;
  right: 0;
  height: 650rpx;
  display: flex;
  flex-direction: row;
}

.overlay-left,
.overlay-right {
  width: 50rpx;
  background: rgba(0, 0, 0, 0.6);
}

/* 取景框 */
.frame-box {
  width: 650rpx;
  height: 650rpx;
  position: relative;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
}

/* 四个角的L形引导线 */
.corner-line {
  position: absolute;
  background: #1677FF;
  box-shadow: 0 0 10rpx rgba(22, 119, 255, 0.8);
}

.corner-line::before,
.corner-line::after {
  content: '';
  position: absolute;
  background: #1677FF;
  box-shadow: 0 0 10rpx rgba(22, 119, 255, 0.8);
}

/* 左上角 */
.top-left {
  top: -3rpx;
  left: -3rpx;
  width: 80rpx;
  height: 6rpx;
  border-radius: 3rpx 0 0 0;
}

.top-left::after {
  top: 0;
  left: 0;
  width: 6rpx;
  height: 80rpx;
  border-radius: 3rpx 0 0 0;
}

/* 右上角 */
.top-right {
  top: -3rpx;
  right: -3rpx;
  width: 80rpx;
  height: 6rpx;
  border-radius: 0 3rpx 0 0;
}

.top-right::after {
  top: 0;
  right: 0;
  width: 6rpx;
  height: 80rpx;
  border-radius: 0 3rpx 0 0;
}

/* 左下角 */
.bottom-left {
  bottom: -3rpx;
  left: -3rpx;
  width: 80rpx;
  height: 6rpx;
  border-radius: 0 0 0 3rpx;
}

.bottom-left::after {
  bottom: 0;
  left: 0;
  width: 6rpx;
  height: 80rpx;
  border-radius: 0 0 0 3rpx;
}

/* 右下角 */
.bottom-right {
  bottom: -3rpx;
  right: -3rpx;
  width: 80rpx;
  height: 6rpx;
  border-radius: 0 0 3rpx 0;
}

.bottom-right::after {
  bottom: 0;
  right: 0;
  width: 6rpx;
  height: 80rpx;
  border-radius: 0 0 3rpx 0;
}

/* 取景框提示文字 */
.frame-hint {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(22, 119, 255, 0.9);
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  backdrop-filter: blur(10rpx);
}

.hint-text {
  color: #fff;
  font-size: 26rpx;
  font-weight: 500;
  white-space: nowrap;
}

/* 下方遮罩 */
.overlay-bottom {
  position: absolute;
  top: calc((100% - 650rpx) / 2 + 650rpx);
  left: 0;
  right: 0;
  bottom: 260rpx;
  background: rgba(0, 0, 0, 0.6);
}

/* 相机控制栏 */
.camera-controls {
  position: absolute;
  bottom: 80rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  pointer-events: auto;
  z-index: 100;
}

.control-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  pointer-events: auto;
  margin: 0 60rpx;
}

.control-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  line-height: 80rpx;
  text-align: center;
}

.control-label {
  font-size: 22rpx;
  color: #fff;
  opacity: 0.9;
  line-height: 1;
}

/* 拍照按钮 */
.control-item.capture {
  transform: scale(1.2);
}

.capture-button {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 6rpx solid #fff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.4);
}

.capture-inner {
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50%;
}

/* 拍照提示覆盖层 */
.photo-tips-overlay {
  position: absolute;
  top: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(22, 119, 255, 0.9);
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  backdrop-filter: blur(10rpx);
  max-width: 80%;
  pointer-events: auto;
}

.tip-text {
  color: #fff;
  font-size: 24rpx;
  line-height: 1.5;
  text-align: center;
  display: block;
}

/* 初始上传区域容器 */
.upload-area-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 20rpx 20rpx;
}

.upload-area {
  width: 600rpx;
  height: 500rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  border: 4rpx dashed #D9D9D9;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
}

.upload-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.upload-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

/* 拍照技巧提示 */
.photo-tips {
  width: 100%;
  background: #FFF;
  padding: 30rpx;
  margin: 0;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

/* 识别设置区域 */
.settings-section {
  width: 100%;
  margin: 0 0 40rpx 0;
  background: #FFFFFF;
  padding: 30rpx;
}

.settings-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.setting-item:last-of-type {
  border-bottom: none;
}

.setting-label {
  display: flex;
  align-items: center;
  flex: 1;
}

.label-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.setting-value {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  padding: 8rpx 20rpx;
  background: #F8F8F8;
  border-radius: 8rpx;
}

.setting-value .arrow {
  margin-left: 12rpx;
  font-size: 32rpx;
  color: #999;
}

.settings-tip {
  margin-top: 24rpx;
  padding: 20rpx;
  background: #FFF9E6;
  border-radius: 12rpx;
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.settings-tip .tip-icon {
  font-size: 32rpx;
  line-height: 1;
}

.settings-tip .tip-text {
  flex: 1;
  font-size: 24rpx;
  color: #8c6d1f;
  line-height: 1.6;
}

/* 识别中 */
.recognizing-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-image {
  width: 100%;
  max-height: 500rpx;
  border-radius: 16rpx;
  margin-bottom: 60rpx;
}

.progress-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-ring {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: conic-gradient(#1677FF 0deg, #E5E5E5 0deg);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  position: relative;
}

.progress-ring::before {
  content: '';
  width: 160rpx;
  height: 160rpx;
  background-color: #FFFFFF;
  border-radius: 50%;
  position: absolute;
}

.progress-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #1677FF;
  position: relative;
  z-index: 1;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
}

/* 识别结果 */
.result-section {
  display: flex;
  flex-direction: column;
}

.result-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.edit-btn {
  padding: 12rpx 24rpx;
  background-color: #E6F4FF;
  color: #1677FF;
  font-size: 24rpx;
  border-radius: 20rpx;
  border: none;
}

.delete-btn {
  padding: 12rpx 24rpx;
  background-color: #FFF1F0;
  color: #ff4444;
  font-size: 24rpx;
  border-radius: 20rpx;
  border: none;
}

.result-content {
  margin-bottom: 30rpx;
}

.result-textarea {
  width: 100%;
  min-height: 300rpx;
  max-height: 800rpx;
  padding: 20rpx;
  background-color: #F5F5F5;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 题目信息 */
.question-info {
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.info-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}

.picker,
.info-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* AI分析提示样式 */
.ai-tips {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  margin: 20rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.ai-icon {
  font-size: 32rpx;
}

.ai-text {
  flex: 1;
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
}

.ai-badge {
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #fff;
  backdrop-filter: blur(10rpx);
}

.ai-mark {
  margin-left: 8rpx;
  font-size: 24rpx;
  animation: sparkle 1.5s ease-in-out infinite;
}

@keyframes sparkle {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.6; transform: scale(1.2); }
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 多题目选择器样式 */
.question-selector {
  margin: 20rpx 0;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.selector-title {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.selector-list {
  white-space: nowrap;
}

.selector-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  height: 100rpx;
  margin-right: 16rpx;
  padding: 16rpx;
  background: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.selector-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  transform: scale(1.05);
}

.selector-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.selector-item.active .selector-number {
  color: #fff;
}

.selector-label {
  font-size: 22rpx;
  color: #999;
}

.selector-item.active .selector-label {
  color: rgba(255, 255, 255, 0.9);
}

/* 裁剪预览模式 */
.crop-preview-mode {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.crop-preview-mode .header {
  flex-shrink: 0;
  padding: 30rpx 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.crop-preview-mode .subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.question-grid {
  flex: 1;
  padding: 20rpx;
}

.question-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
  border: 3rpx solid transparent;
}

.question-item.selected {
  border-color: #1677FF;
  box-shadow: 0 4rpx 20rpx rgba(22, 119, 255, 0.2);
  transform: scale(0.98);
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.question-number {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.question-item.selected .question-number {
  color: #1677FF;
}

.selected-badge {
  width: 40rpx;
  height: 40rpx;
  background: #1677FF;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.question-image-wrapper {
  width: 100%;
  min-height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f8f8;
  border-radius: 12rpx;
  overflow: hidden;
}

.question-preview {
  width: 100%;
  display: block;
}

.question-loading {
  padding: 60rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

.action-bar {
  flex-shrink: 0;
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
}

.action-bar .action-btn {
  flex: 1;
  height: 88rpx;
}

/* ============ 格式化预览模式样式 ============ */

.formatted-preview-mode {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

.formatted-preview-mode .header {
  flex-shrink: 0;
  padding: 30rpx 20rpx 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.formatted-preview-mode .title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.formatted-preview-mode .subtitle {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.formatted-list {
  flex: 1;
  padding: 20rpx;
}

.formatted-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.item-header {
  display: flex;
  justify-content: space-between;
