.container {
  padding: 20rpx;
  background-color: #F5F5F5;
  height: 100vh;
}

/* 统计卡片区域 */
.stats-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.stat-card {
  flex: 1;
  background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 24rpx;
  padding: 30rpx 20rpx;
  box-shadow:
    0 8rpx 24rpx rgba(0, 0, 0, 0.06),
    inset 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.stat-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.08);
}

.stat-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.stat-value {
  display: block;
  font-size: 56rpx;
  font-weight: 600;
  color: #333;
}

/* 快捷功能 */
.quick-actions {
  margin-bottom: 40rpx;
}

.action-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.action-card:active {
  transform: scale(0.98);
}

.action-icon {
  width: 96rpx;
  height: 96rpx;
  font-size: 52rpx;
  margin-right: 24rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(20rpx);
  box-shadow:
    0 8rpx 24rpx rgba(0, 0, 0, 0.15),
    inset 0 2rpx 6rpx rgba(255, 255, 255, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-card:active .action-icon {
  transform: scale(0.95);
}

.action-info {
  flex: 1;
}

.action-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.action-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.action-arrow {
  font-size: 48rpx;
  color: #FFFFFF;
  font-weight: 300;
}

/* 学科分类 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.subjects-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.subject-card {
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow:
    0 8rpx 24rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 3rpx rgba(255, 255, 255, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-height: 280rpx;
  position: relative;
  overflow: hidden;
}

/* 为学科卡片添加微妙的光泽效果 */
.subject-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 30%,
    rgba(255, 255, 255, 0.15) 50%,
    transparent 70%
  );
  pointer-events: none;
}

.subject-card:active {
  transform: scale(0.96) translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.subject-icon {
  width: 120rpx;
  height: 120rpx;
  font-size: 68rpx;
  margin-bottom: 20rpx;
  pointer-events: none; /* 防止阻止点击事件 */
  line-height: 1;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:
    0 8rpx 24rpx rgba(0, 0, 0, 0.12),
    inset 0 2rpx 6rpx rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 图片图标样式 */
.subject-icon-img {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  pointer-events: none;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 50%;
  box-shadow:
    0 8rpx 24rpx rgba(0, 0, 0, 0.12),
    inset 0 2rpx 6rpx rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.subject-card:active .subject-icon,
.subject-card:active .subject-icon-img {
  transform: scale(0.9);
}

.subject-info {
  text-align: center;
  width: 100%;
  pointer-events: none; /* 防止子元素阻止点击事件 */
}

.subject-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.quick-practice {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 学科掌握进度 */
.progress-section {
  margin-bottom: 40rpx;
}

.progress-item {
  margin-bottom: 32rpx;
}

.progress-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.progress-bar-container {
  width: 100%;
  height: 16rpx;
  background-color: #E5E5E5;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background-color: #333;
  border-radius: 8rpx;
  transition: width 0.3s;
}
