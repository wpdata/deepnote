.container {
  height: 100vh;
  background-color: #F5F5F5;
}

/* 统计信息 */
.stats-header {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 30rpx;
  background-color: #FFFFFF;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 600;
  color: #1677FF;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 标签切换 */
.tabs {
  display: flex;
  background-color: #FFFFFF;
  margin-top: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1677FF;
  font-weight: 600;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #1677FF;
  border-radius: 3rpx;
}

/* 内容区域 */
.content {
  padding: 20rpx;
}

/* 学科标签滚动 */
.subject-tabs {
  margin-bottom: 20rpx;
}

.subject-scroll {
  white-space: nowrap;
}

.subject-tag {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background-color: #FFFFFF;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.subject-tag.active {
  background-color: #1677FF;
  color: #FFFFFF;
}

/* 知识点列表 */
.knowledge-list {
  margin-top: 20rpx;
}

.knowledge-item {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.knowledge-info {
  margin-bottom: 24rpx;
}

.subject-tag-small {
  display: inline-block;
  padding: 8rpx 16rpx;
  background-color: #E6F4FF;
  color: #1677FF;
  font-size: 22rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.knowledge-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin: 12rpx 0 8rpx 0;
}

.error-count {
  font-size: 24rpx;
  color: #999;
}

/* 进度条 */
.progress-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.progress-bar-bg {
  flex: 1;
  height: 12rpx;
  background-color: #E5E5E5;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  background-color: #1677FF;
  border-radius: 6rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #1677FF;
  font-weight: 600;
  min-width: 80rpx;
  text-align: right;
}
