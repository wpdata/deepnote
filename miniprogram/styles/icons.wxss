/* DeepNote 图标库 - 企业级设计 */
/* 使用简洁的文本符号 + 样式美化 */

.dn-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-weight: 500;
  font-style: normal;
}

/* 拍照图标 - 使用圆形背景 */
.icon-camera {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  color: #fff;
  font-size: 48rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.icon-camera::after {
  content: '';
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #fff;
  border-radius: 8rpx;
  position: relative;
}

.icon-camera::before {
  content: '';
  width: 16rpx;
  height: 4rpx;
  background: #fff;
  position: absolute;
  top: 24rpx;
  border-radius: 2rpx;
}

/* 学科图标 - 圆形带颜色 */
.icon-subject {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
}

.icon-subject.math {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.icon-subject.chinese {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.icon-subject.english {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.icon-subject.arithmetic {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

/* 成功/对勾 - 圆形绿色 */
.icon-success {
  width: 32rpx;
  height: 32rpx;
  background: #09BB07;
  border-radius: 50%;
  color: #fff;
  font-size: 20rpx;
  line-height: 32rpx;
  text-align: center;
}

.icon-success::before {
  content: '✓';
}

/* 错误/叉号 - 圆形红色 */
.icon-error {
  width: 32rpx;
  height: 32rpx;
  background: #E64340;
  border-radius: 50%;
  color: #fff;
  font-size: 20rpx;
  line-height: 32rpx;
  text-align: center;
}

.icon-error::before {
  content: '✕';
}

/* 星星收藏图标 */
.icon-star {
  width: 44rpx;
  height: 44rpx;
  font-size: 44rpx;
  color: #FFB800;
  line-height: 1;
}

.icon-star.filled::before {
  content: '★';
}

.icon-star.outline::before {
  content: '☆';
}

/* 空状态图标 */
.icon-empty {
  width: 160rpx;
  height: 160rpx;
  background: #F5F5F5;
  border-radius: 50%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  color: #D9D9D9;
}

.icon-empty::before {
  content: '📄';
  filter: grayscale(100%);
  opacity: 0.5;
}

/* 设置图标 - 齿轮 */
.icon-setting {
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid currentColor;
  border-radius: 8rpx;
  position: relative;
}

.icon-setting::before {
  content: '';
  width: 16rpx;
  height: 16rpx;
  border: 2rpx solid currentColor;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 提示图标 - 感叹号 */
.icon-tip {
  width: 40rpx;
  height: 40rpx;
  background: #FFF9E6;
  border: 2rpx solid #FFD700;
  border-radius: 50%;
  color: #8c6d1f;
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: center;
  font-weight: 600;
}

.icon-tip::before {
  content: 'i';
}

/* 小图标 - 用于列表项 */
.icon-small {
  width: 28rpx;
  height: 28rpx;
  font-size: 28rpx;
  line-height: 1;
}
